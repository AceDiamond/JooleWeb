@{
    ViewBag.Title = "login";
}

<title>Log-In</title>
<style>
    .field-validation-error{
        color:red;
    }
</style>



<div class="container h-auto">
    <div id="loginbox" style="margin-top: 300px; margin-right:50px; position: absolute; border: 1Px solid #ccc; padding: 10px" , class="mainbox col-md-8 col-md-offset-6 col-sm-8 col-sm-offset-2">
        <div class="pannel-info">
            @using (Html.BeginForm("Authorize", "Home", FormMethod.Post))
            {
                <div class="form-group">

                    @Html.LabelFor(m => m.UserName)
                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { placeplaceholder = "Please enter your UserName" } }) 
                    @Html.ValidationMessageFor(m => m.UserName) <br />
                </div>
                <div class="form-group">
                    @Html.Label("Password:")
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { placeplaceholder = "Please enter your UserName" } })
                    @Html.ValidationMessageFor(m => m.Password) <br />

                </div>
                <label class="field-validation-error"> @Html.DisplayFor(m =>m.LoginErrorMessage) </label>
                <div class="form-group">
                    <button type="submit" id="btn-login" class="btn btn-success" name="log_in" value="log_in">Log-In</button>
                    <button type="submit" id="btn-Link" class="btn btn-outline-secondary" name="SignUp" value="SignUp">Sign Up</button>
                </div>
            }

        </div>
    </div>
</div>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
