
@{
    ViewBag.Title = "login";
}


<!DOCTYPE html>
<html>
<head>
    <title>Log-In</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</head>
<body>
    <div class="container h-auto">
        <div id="loginbox" style="margin-top: 150px; margin-right:500px", class="mainbox col-md-8 col-md-offset-6 col-sm-8 col-sm-offset-2">
            <div class="pannel-info">
                <div class="form-group">
                    @Html.Label("email", "Email:")
                    @Html.TextBox("UserName", null, new { placeholder = "Please enter your email or userID", @class = "form-control", id = "exampleInputEmail" })<br />
                </div>
                <div class="form-group">
                    @Html.Label("Password", "Password:")
                    @Html.TextBox("password", null, new { placeholder = "Please enter your password", @class = "form-control", id = "exampleInputPassword2" })<br />

                </div>
                <div class="form-group">
                    <button type="submit" id="btn-login" class="btn btn-success" name="login" value="login">Log-In</button>
                    <button type="submit" id="btn-Link"  class="btn btn-outline-secondary" name="SingUp" value="SingUp">Sing up</button>
                </div>
            </div>
        </div>
   
    </div>
</body>
</html> 