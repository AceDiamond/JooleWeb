
@{
    ViewBag.Title = "Search";
}

    <div class="container" style="margin-top: 20%">
        <h1 style="text-align: center; margin-bottom: 25px">Building Product Selection Platform</h1>
        @using (@Html.BeginForm())
        {
    <div class="input-group d-flex justify-content-center row" style="text-align: center">
        @Html.DropDownList("Category", new SelectList(ViewBag.Cate, "Category_ID", "Category_Name",ViewBag.current), "Select a Category", new { @class = "btn btn-primary dropdown-toggle col-2"})

        @Html.DropDownList("subCategory",new SelectList(ViewBag.subCategory, "SubCategory_ID", "SubCategory_Name"), "Select a Subcategory", new { @class = "js-example-basic-multiple col-6" })
        <input type="submit" value="Search" class="btn btn-primary col-2" />
    </div>
 
        }

        @section scripts{
            <script>
                $(".js-example-basic-multiple").select2();
                $(document).ready(function () {
                    $("#Category").change(function () {
                        var cID = $(this).val();
                        window.location = "Search?value=" + cID
                    });
                });
            </script>
        }
    </div>
