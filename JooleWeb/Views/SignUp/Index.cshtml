@model JooleWeb.Models.SignUp

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>SignUp</title>
<style>
    #login-div {
        position: absolute;
        left: 40%;
        top: 40%;
        border: 3px solid #ccc;
        padding: 10px;
    }
</style>

<div id="login-div">
    @using (Html.BeginForm("SignUp", "SignUp", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.UserName)
                </td>
                <td>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Password)
                </td>
                <td>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Avatan)
                </td>
                <td>
                    @Html.EditorFor(model => model.Avatan, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Credentials)
                </td>
                <td>
                    @Html.EditorFor(model => model.Credentials, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
        </table>
    }
</div>


