@model JooleWeb.Models.login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>login</title>
<style>
    #login-div{
        position:absolute;
        left:40%;
        top:40%;
        border:3px solid #ccc;
        padding: 10px;
    }
</style>
<div id="login-div">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    @Html.LabelFor(m => m.UserName)
                </td>
                <td>
                    @Html.TextBoxFor(m => m.UserName, new { Attribute = new { placeholder = "please enter your user name", type = "text", required = "required" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Password)
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Password, new { Attribute = new { placeholder = "please enter your Password", type="password", required = "required" } })
                </td>
            </tr>
            <tr>
                <td>
                    
                </td>
                <td>
                    <input type="submit" name="Login" value="Login" class="btn btn-primary" />
                </td>
            </tr>

        </table>
    }
    @using (Html.BeginForm("Index", "SignUp", FormMethod.Post))
    {
        <input type="submit" name="SingUp" value="SingUp" class="btn btn-success" />
    }
</div>

